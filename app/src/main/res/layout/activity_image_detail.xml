<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.fullImageScreen.ImageFull">

    <ImageView
        android:id="@+id/full_img_vew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>


    <data>
        <variable
            name="view"
            type="com.example.imagegallery.screens.fullImageScreen.ImageFullContract.View"/>

        <variable
            name="presenter"
            type="com.example.imagegallery.screens.fullImageScreen.ImageFullPresenter"/>
    </data>
</layout>